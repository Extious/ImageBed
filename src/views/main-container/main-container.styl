$top-container-height = 60rem
$left-side-width = 90rem

.main-container {
  position relative
  box-sizing border-box
  width 100%
  height 100%
  font-size 15rem
  background linear-gradient(135deg, var(--background-color) 0%, var(--background-color-3) 100%)
  overflow hidden

  &::before {
    content none
  }

  .top-container {
    position relative
    box-sizing border-box
    width 100%
    height $top-container-height
    backdrop-filter blur(10px) saturate(1.2)
    z-index 10
  }


  .bottom-container {
    position relative
    box-sizing border-box
    width 100%
    height 'calc(100% - %s)' % $top-container-height
    z-index 5

    .bottom-content {
      position relative
      box-sizing border-box
      width 100%
      height 100%
      padding-left $left-side-width

      .left {
        position absolute
        top 0
        left 0
        box-sizing border-box
        width $left-side-width
        height 100%
        padding-top $component-interval
        z-index 10
        animation slideInFromLeft 0.6s cubic-bezier(0.4, 0, 0.2, 1)
      }

      .right {
        position relative
        box-sizing border-box
        width 100%
        height 100%
        padding-top $component-interval
        padding-left $component-interval
        padding-right $component-interval
        z-index 5
        animation fadeIn 0.8s ease-out
      }
    }
  }
}
