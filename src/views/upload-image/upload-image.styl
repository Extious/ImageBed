.upload-page-container {
  display flex
  justify-content center
  width 100%
  height 100%
  gap 24rem
  max-width 1212rem
  margin 0 auto
  animation fadeIn 0.6s ease-out

  .upload-page-left {
    flex-shrink 0
    box-sizing border-box
    height 100%
    background var(--background-color)
    border-radius 16rem
    box-shadow var(--card-shadow)
    border 1rem solid var(--border-color-light)
    padding 20rem
    backdrop-filter blur(10px)

    .uploaded-item {
      width 100%
      margin-bottom 20rem
      animation slideInFromLeft 0.5s ease-out

      &:last-child {
        margin-bottom 0
      }
    }
  }

  .upload-page-right {
    box-sizing border-box
    flex 1
    min-width 0
    height 100%
    overflow-y auto

    &.has-left {
      border-radius 0
    }

    .row-item {
      display flex
      justify-content center
      box-sizing border-box
      width 100%
      margin-bottom 20rem
      animation fadeInUp 0.6s ease-out
      animation-fill-mode both

      &:nth-child(1) { animation-delay 0.1s }
      &:nth-child(2) { animation-delay 0.2s }
      &:nth-child(3) { animation-delay 0.3s }
      &:nth-child(4) { animation-delay 0.4s }

      &:last-child {
        margin-bottom 0
      }

      .content-box {
        box-sizing border-box
        width 100%
        max-width $content-max-width
        margin 0 auto
        background var(--background-color)
        border-radius 16rem
        padding 24rem
        box-shadow var(--card-shadow)
        border 1rem solid var(--border-color-light)
        transition all 0.3s cubic-bezier(0.4, 0, 0.2, 1)
        
        &:hover {
          box-shadow var(--card-shadow-hover)
          transform translateY(-2rem)
        }

        &.upload-area-status {
          display flex
          align-items center
          justify-content space-between
          margin-bottom 0
          font-size 14rem
          background linear-gradient(135deg, var(--accent-color)05, var(--background-color))
          color var(--text-color-3)
          font-weight 500
        }

        &.operation-btn {
          display flex
          justify-content flex-end
          gap 12rem
          background linear-gradient(135deg, var(--background-color), var(--background-color-2))
          
          .el-button {
            position relative
            overflow hidden
            isolation isolate
            border-radius 12rem
            padding 12rem 24rem
            font-weight 600
            transition all 0.3s cubic-bezier(0.4, 0, 0.2, 1)
            
            &::before {
              content ''
              position absolute
              top 0
              left -100%
              width 100%
              height 100%
              z-index 0
              background linear-gradient(90deg, transparent, rgba(255,255,255,0.12), transparent)
              transition left 0.5s ease
            }
            
            &:hover::before {
              left 100%
            }
            
            &:hover {
              transform translateY(-2rem) scale(1.02)
              box-shadow 0 8rem 24rem rgba(64,158,255,0.2)
            }
          }
        }

        .shortcut-key {
          margin-left 8rem
          font-size 12rem
          position relative
          z-index 1
          color var(--text-color-2)
          opacity 0.9
          background rgba(0,0,0,0.06)
          padding 2rem 6rem
          border-radius 4rem
          border 1rem solid rgba(0,0,0,0.08)
          font-family monospace

          +picx-tablet() {
            display none
          }
        }
      }
    }

    .upload-tools {
      width 100%

      .repos-dir-info {
        margin-bottom 20rem
        font-size 12rem

        .repos-dir-info-item {
          margin-right 10rem

          &:last-child {
            margin-right 0
          }
        }
      }
    }
  }
}
