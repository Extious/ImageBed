$infoBarHeight = 50rem

.management-page-container {
  padding-bottom 0 !important

  .content-container {
    position relative
    box-sizing border-box
    width 100%
    height 100%
    padding-top $infoBarHeight

    .top {
      position relative
      box-sizing border-box
      display flex
      align-items center
      justify-content space-between
      width 100%
      height 30rem
      padding-bottom 10rem

      .btn-icon {
        font-size 22rem
        cursor pointer
      }
    }

    .tag-filter-wrapper {
      margin-bottom 10rem
    }

    .bottom {
      position relative
      box-sizing border-box
      width 100%
      height 100%
      border 1rem solid var(--border-color)
      border-bottom none
      border-top-left-radius 6rem
      border-top-right-radius 6rem


      .image-management-list {
        position relative
        display flex
        flex-wrap wrap
        align-content flex-start
        box-sizing border-box
        width 100%
        padding 2rem
        overflow-y auto

        li.image-management-item {
          position relative
          box-sizing border-box
          padding 10rem

          &.image {
            width 230rem
          }

          &:last-child {
            margin-right 0
          }
        }
      }
    }
  }
}
