// ========================================================================
//  others variables
// ========================================================================
$component-interval = 16rem
$box-border-radius = 10rem
$content-max-width = 888rem
$scrollbar-size = 8rem


// ========================================================================================
// media query
// ========================================================================================
$media-max-width-tablet-2 = 1200px                       // media query max width (tablet-2)
$media-max-width-tablet = 900px                          // media query max width (tablet)
$media-max-width-mobile = 600px                          // media query max width (mobile)

picx-tablet-2() {
  @media (max-width $media-max-width-tablet-2) {
    { block }
  }
}


picx-tablet() {
  @media (max-width $media-max-width-tablet) {
    { block }
  }
}


picx-mobile() {
  @media (max-width $media-max-width-mobile) {
    { block }
  }
}


// ========================================================================================
// z-index
// ========================================================================================
$z-index-1 = 1001
$z-index-2 = 1002
$z-index-3 = 1003
$z-index-4 = 1004
$z-index-5 = 1005
$z-index-6 = 1006
$z-index-7 = 1007
$z-index-8 = 1008
$z-index-9 = 1009


// ========================================================================================
// light mode color
// ========================================================================================
$background-color = #fafbfc
$background-color-2 = #f5f7fa
$background-color-3 = #ebeef5

$text-color = #2c3e50
$text-color-2 = #34495e
$text-color-3 = #606266
$text-color-4 = #909399
$text-color-5 = #c0c4cc

$border-color = #e4e7ed
$border-color-light = #f0f2f5

$shadow-color = rgba(0, 0, 0, 0.08)
$shadow-hover-color = rgba(0, 0, 0, 0.15)

$scrollbar-color = #d3d4d6
$scroll-bar-bg-color = #f5f7fa

$await-upload-color = #e6a23c
$uploading-color = #409eff  
$uploaded-color = #67c23a

// 新增现代化色彩
$accent-color = #667eea
$accent-color-light = #764ba2
$success-color = #10b981
$warning-color = #f59e0b
$danger-color = #ef4444


// ========================================================================================
// dark mode color
// ========================================================================================
$dark-background-color = #1a1b23
$dark-background-color-2 = #252730
$dark-background-color-3 = #2d303b

$dark-text-color = #e2e8f0
$dark-text-color-2 = #f1f5f9
$dark-text-color-3 = #cbd5e1
$dark-text-color-4 = #94a3b8
$dark-text-color-5 = #64748b

$dark-border-color = #374151
$dark-border-color-light = #334155

$dark-shadow-color = rgba(0, 0, 0, 0.3)
$dark-shadow-hover-color = rgba(0, 0, 0, 0.5)

$dark-scrollbar-color = #4b5563
$dark-scroll-bar-bg-color = #374151

$dark-await-upload-color = #f59e0b
$dark-uploading-color = #3b82f6
$dark-uploaded-color = #10b981

// 暗色模式现代化色彩
$dark-accent-color = #8b5cf6
$dark-accent-color-light = #a78bfa
$dark-success-color = #059669
$dark-warning-color = #d97706
$dark-danger-color = #dc2626


root-color(mode) {
  --background-color mode == 'light' ? $background-color : $dark-background-color
  --background-color-2 mode == 'light' ? $background-color-2 : $dark-background-color-2
  --background-color-3 mode == 'light' ? $background-color-3 : $dark-background-color-3

  --text-color mode == 'light' ? $text-color : $dark-text-color
  --text-color-2 mode == 'light' ? $text-color-2 : $dark-text-color-2
  --text-color-3 mode == 'light' ? $text-color-3 : $dark-text-color-3
  --text-color-4 mode == 'light' ? $text-color-4 : $dark-text-color-4
  --text-color-5 mode == 'light' ? $text-color-5 : $dark-text-color-5

  --border-color mode == 'light' ? $border-color : $dark-border-color
  --border-color-light mode == 'light' ? $border-color-light : $dark-border-color-light
  --shadow-color mode == 'light' ? $shadow-color : $dark-shadow-color
  --shadow-hover-color mode == 'light' ? $shadow-hover-color : $dark-shadow-hover-color
  --scrollbar-color mode == 'light' ? $scrollbar-color : $dark-scrollbar-color
  --scroll-bar-bg-color mode == 'light' ? $scroll-bar-bg-color : $dark-scroll-bar-bg-color

  --await-upload-color  mode == 'light' ? $await-upload-color : $dark-await-upload-color
  --uploading-color  mode == 'light' ? $uploading-color : $dark-uploading-color
  --uploaded-color  mode == 'light' ? $uploaded-color : $dark-uploaded-color

  // accent colors
  --accent-color mode == 'light' ? $accent-color : $dark-accent-color
  --accent-color-light mode == 'light' ? $accent-color-light : $dark-accent-color-light
  --success-color mode == 'light' ? $success-color : $dark-success-color
  --warning-color mode == 'light' ? $warning-color : $dark-warning-color
  --danger-color mode == 'light' ? $danger-color : $dark-danger-color

  // brand gradient - modern purple/blue theme
  --brand-gradient-start mode == 'light' ? #667eea : #8b5cf6
  --brand-gradient-end mode == 'light' ? #764ba2 : #a78bfa

  // surface helpers - enhanced shadows
  --card-shadow mode == 'light' ? 0 4rem 12rem rgba(0,0,0,0.05) : 0 4rem 12rem rgba(0,0,0,0.2)
  --card-shadow-hover mode == 'light' ? 0 20rem 40rem rgba(0,0,0,0.1) : 0 20rem 40rem rgba(0,0,0,0.3)
  --card-shadow-light 0 1rem 3rem rgba(0,0,0,0.05)
  --ring-color mode == 'light' ? rgba(102,126,234,0.3) : rgba(139,92,246,0.4)
  
  // glass effect
  --glass-bg mode == 'light' ? rgba(255,255,255,0.8) : rgba(26,27,35,0.8)
  --glass-border mode == 'light' ? rgba(255,255,255,0.2) : rgba(255,255,255,0.1)
}



