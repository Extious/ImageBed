.nav {
  position relative
  display flex
  flex-direction column
  justify-content space-between
  box-sizing border-box
  width 100%
  height 100%
  background var(--background-color)
  border-top-right-radius $box-border-radius
  box-shadow var(--card-shadow), inset -1rem 0 0 var(--border-color-light)
  backdrop-filter blur(10px)
  
  &::before {
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background linear-gradient(180deg, var(--glass-bg) 0%, transparent 100%)
    pointer-events none
    z-index -1
    border-top-right-radius $box-border-radius
  }

  ul.nav-list {
    margin 0
    padding 0
  }

  .nav-item {
    position relative
    box-sizing border-box
    width 100%
    height 78rem
    cursor pointer
    user-select none
    transition all 0.3s cubic-bezier(0.4, 0, 0.2, 1)
    margin 2rem 0
    overflow hidden

    &:first-child {
      border-top-right-radius $box-border-radius
    }

    &::before {
      content ''
      position absolute
      left 0
      top 0
      width 3rem
      height 100%
      background transparent
      border-radius 0 4rem 4rem 0
      transition all 0.3s ease
      z-index 2
    }

    &::after {
      content ''
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      width 0
      height 0
      background radial-gradient(circle, var(--accent-color) 0%, transparent 70%)
      border-radius 50%
      opacity 0
      transition all 0.4s ease
      z-index 1
    }

    &.active {
      color var(--accent-color)
      font-weight 600
      background linear-gradient(135deg, var(--accent-color)10, rgba(102,126,234,0.05))
      transform translateX(4rem)
      
      &::before {
        background linear-gradient(180deg, var(--accent-color), var(--accent-color-light))
        box-shadow 0 0 10rem var(--accent-color)30
      }

      &::after {
        width 60rem
        height 60rem
        opacity 0.3
      }

      .nav-content {
        .nav-name {
          color var(--accent-color)
          font-weight 600
        }
      }
    }

    &:hover:not(.active) {
      background var(--background-color-2)
      transform translateX(2rem)
      
      &::after {
        width 80rem
        height 80rem
        opacity 0.1
      }
    }

    &:active {
      transform translateX(1rem)
    }

    .nav-content {
      display flex
      flex-direction column
      align-items center
      justify-content center
      height 100%
      z-index 3
      position relative

      .nav-name {
        margin-top 6rem
        font-size 12rem
        text-align center
        transition all 0.3s ease
        font-weight 500
      }
    }
  }
}
