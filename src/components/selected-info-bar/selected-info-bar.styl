.selected-info-bar-box {
  display flex
  align-items center
  justify-content flex-start
  box-sizing border-box
  height 100%
  font-size 12rem
  padding 4rem 8rem
  background var(--background-color)
  border 1rem solid var(--border-color)
  border-radius 6rem
  box-shadow var(--card-shadow)

  .info-item {
    margin-right 10rem
    color var(--text-color-3)

    +picx-tablet() {
      &.repo {
        display none
      }
    }

    +picx-mobile() {
      &.branch {
        display none
      }
    }

    &:last-child {
      margin-right 0
    }
  }
}
